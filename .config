# Target arch és chip
CONFIG_TARGET_ath79=y
CONFIG_TARGET_ath79_generic=y
CONFIG_TARGET_ath79_generic_DEVICE_generic_ar7241=y  # Általános AR7241 profil

# Fájlrendszer
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_INITRAMFS=y  # Opcionális (RAM-ban futtatható verzió)

# Alap csomagok
CONFIG_PACKAGE_luci=y             # Webes felület
CONFIG_PACKAGE_luci-ssl=y         HTTPS támogatás
CONFIG_PACKAGE_dropbear=y         # SSH
CONFIG_PACKAGE_iptables=y         # Tűzfal
CONFIG_PACKAGE_ip-full=y          # Teljes IP eszközkészlet
CONFIG_PACKAGE_ppp=y              # PPP támogatás (modemekhez)

# WiFi driver (ha van rá szükség)
CONFIG_PACKAGE_kmod-ath9k=y       # AR7241 WiFi támogatás

# Egyéb hasznos csomagok
CONFIG_PACKAGE_nano=y             # Szövegszerkesztő
CONFIG_PACKAGE_htop=y             # Rendszerfigyelő
CONFIG_PACKAGE_tcpdump=y          # Hálózati diagnosztika

# Optimalizációk
CONFIG_ALL_KMODS=n                # Ne fordítson minden drivert
CONFIG_ALL_NONSHARED=n
